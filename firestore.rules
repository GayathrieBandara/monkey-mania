rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    // - Authenticated users can read/write their own document
    // - Admins can read/write all documents
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }
    
    // Scores collection
    // - Anyone can read (for leaderboard)
    // - Authenticated users can create scores
    // - Admins can delete scores
    match /scores/{scoreId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow delete: if isAdmin();
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
